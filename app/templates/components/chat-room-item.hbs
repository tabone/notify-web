{{#link-to "chat.room" room title="Open room" class="app-chat-room-item__link mdl-list__item mdl-js-ripple-effect"}}
  <span class="mdl-list__item-primary-content">
    <span class="mdl-list__item-avatar">
      <img class="app--circularize app--full-width mdl-typography--caption"
        src="/images/{{room.uiImage}}"
        alt="{{room.uiName}} room picture"/>
    </span>
    <span>{{room.uiName}}</span>
  </span>
  <span class="mdl-list__item-secondary-content">
    <span class="mdl-list__item-secondary-action mdl-color-text--accent">
      {{#if hasUpdates}}
        <i class="material-icons">chat_bubble</i>
      {{/if}}
    </span>
  </span>
  <div class="mdl-ripple"></div>
{{/link-to}}