<div class="app-login-form mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
    <h2 class="mdl-card__title-text">Login</h2>
  </div>

  <div class="mdl-card__supporting-text">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      {{input type="text"
        id="app-login-form__username-field"
        class="mdl-textfield__input"
        value=username
      }}

      <label class="mdl-textfield__label" for="app-login-form__username-field">
        Enter your username
      </label>
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      {{input type="password"
        id="app-login-form__password-field"
        class="mdl-textfield__input"
        value=password
      }}

      <label class="mdl-textfield__label" for="app-login-form__password-field">
        Enter your password
      </label>
    </div>
    <div class="mdl-color-text--primary mdl-typography--text-center">
      {{error}}
    </div>
  </div>

  <div class="mdl-card__actions">
    <button class="app-login-form__button mdl-button mdl-js-button mdl-js-ripple-effect" onclick={{action 'login'}}>
      Login
    </button>
  </div>
</div>