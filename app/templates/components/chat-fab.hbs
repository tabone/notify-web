<button id="app-chat-fab__button" class="app-chat-fab__button mdl-button mdl-js-button mdl-button--fab mdl-button--colored mdl-js-ripple-effect">
  <i class="material-icons">view_list</i>
</button>

<ul class="mdl-menu mdl-menu--top-right mdl-js-menu mdl-js-ripple-effect"
    data-mdl-for="app-chat-fab__button">
  <li class="mdl-menu__item" onclick={{action "openFinderDialog"}}>
    Open Finder <kbd>CTRL + F</kbd>
  </li>
  <li class="mdl-menu__item" onclick={{action "openRoomCreationDialog"}}>
    Create Room <kbd>CTRL + R</kbd>
  </li>
  {{#if grants.createBot}}
    <li class="mdl-menu__item" onclick={{action "openBotManagementPage"}}>
      Manage Bots <kbd>CTRL + B</kbd>
    </li>
  {{/if}}
</ul>

