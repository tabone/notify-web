<div class="mdl-dialog__content">
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    {{input type="text"
      id="app-chat-filter-dialog__filter-field"
      class="mdl-textfield__input"
      value=filter
    }}

    <label class="mdl-textfield__label" for="app-chat-filter-dialog__filter-field">Search...</label>
  </div>

  <ul class="mdl-list">
    {{#each items as |item|}}
      {{component item.component data=item.data}}
    {{/each}}
  </ul>
</div>
